#!/bin/bash

# Create install location
mkdir /opt/bioit
# Copy module files and repository files
cp -Rpa ~/bioit/modulefiles /opt/bioit
mkdir -p /opt/bioit/repo/RPMS
ln -s ~/bioit/repo/bioit.xml /opt/bioit/repo/bioit.xml
# Create all directories for packages
cd /opt/bioit
mkdir -p bamtools/src bbmap/src bcftools/src bedtools2/src bowtie/src \
  bowtie2/src bwa/src FastQC/src hisat2/src htslib/src ncbi-blast/src \
  picard/src R-core/src samtools/src SOAPdenovo2/src SolexaQA++/src \
  tophat2/src vcftools/src

